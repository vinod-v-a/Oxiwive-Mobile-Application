MDScreen:
    name: "login"
    MDFloatLayout:
        id:main
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        MDLabel:
            text: "W e l c o m e!"
            font_name: "Roboto"
            font_size: "23sp"
            pos_hint: {"center_x": .6,"center_y": .85}
            color: rgba(0, 0, 0, 255)
        MDLabel:
            text: "Sign in to continue"
            font_name:"Roboto"
            font_size: "18sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(74, 73, 73, 255)
        # Email input
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .63}
            MDTextField:
                id: login_email
                hint_text: "Email"
                font_name:"Roboto"
                helper_text:''
                keyboard_suggestions: True
                helper_text_mode:  'on_error'
                required: True
                pos_hint: {"center_x": .5, "center_y": .5}
                multiline: False
                write_tab: False
                line_color_focus: [75/255, 75/255, 75/255, 1]
                hint_text_color_focus: [75/255, 75/255, 75/255, 1]
                canvas.before:
                    Color:
                        rgba: [75/255, 75/255, 75/255, 1]

        # Password input
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .5}
            MDTextField:
                id: login_password
                hint_text: "Password"
                font_name:"Roboto"
                helper_text:''
                helper_text_mode:  'on_error'
                required: True
                pos_hint: {"center_x": .5, "center_y": .5}
                cursor_width: "2sp"
                multiline: False
                keyboard_suggestions: True
                password: not show_password_button.active
                write_tab: False
                line_color_focus: [75/255, 75/255, 75/255, 1]
                hint_text_color_focus: [75/255, 75/255, 75/255, 1]
                canvas.before:
                    Color:
                        rgba: [75/255, 75/255, 75/255, 1]
            MDIconButton:
                id: show_password_button
                pos_hint: {"center_x": .9, "center_y": .5}
                active: False  # Initial state is password hidden
                text_color: [0, 0, 0, 1]
                opposite_colors: True
                background_palette: "Grey"
                background_hue: "500"
                elevation_normal: 10
                on_release:
                    self.active = not self.active
                    login_password.password = not self.active
                Image:
                    source: "images/eye-off.png" if not show_password_button.active else "images/eye.png"
        # Login button
        Button:
            id: login_button
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
            font_name:"Roboto"
            on_release:
                app.login_page(self)
            canvas.before:
                Color:
                    rgb: rgba(255, 0, 0, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        # Forgot password button
        MDTextButton:
            text: "Forgot Password?"
            pos_hint: {"center_x": .5, "center_y": .28}
            color: rgba(250, 87, 87, 255)
            font_size: "12sp"
            font_name:"Roboto"
        MDLabel:
            text: "or"
            color: rgba(74, 73, 73, 255)
            pos_hint: {"center_y": .22}
            font_size: "13sp"
            font_name:"Roboto"
            halign: "center"
        #lines
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .218}
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .218}
        #social media
        MDLabel:
            text: "Social Media Login"
            font_name:"Roboto"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": .16}
            color: rgba(74, 73, 73, 255)
        # social media images
        MDGridLayout:
            cols: 1
            size_hint: .5, .08
            size_hint_y: .05
            pos_hint: {"center_x": .5, "center_y": .1}
            Button:
                size_hint: .6, .08
                background_color: (0,0,0,0)
#                on_release: app.google_sign_in()
        Image:
            size_hint: .5, .1
            pos_hint: {"center_x": .5, "center_y": .1}
            source: 'images/google_logo.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

        MDTextButton:
            text: "Don't have an account? Sign up"
            font_name:"Roboto"
            font_size: "11sp"
            pos_hint: {"center_x": .5, "center_y": .05}
            color: rgba(225, 0, 0, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
