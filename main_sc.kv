MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source:"images/shot.jpg"
            size_hint: .15,.15
            pos_hint:{"center_x": .12, "center_y": .94}
        MDLabel:
            text: "OXIVIVE"
            font_name: "BPoppins"
            font_size: "25sp"
            pos_hint:{"center_x": .38, "center_y": .945}
            halign: "center"
            color: rgba(255, 91, 79, 255)
        Image:
            source:"images/doctor.jpg"
            size_hint: .7,.7
            pos_hint:{"center_x": .5, "center_y": .65}
        MDLabel:
            text: "H e l l o!"
            font_name: "Roboto"
            font_size: "23sp"
            pos_hint: {"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Best place to start your check up and get luxury treatment experiences"
            font_name: "Roboto"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(74, 73, 73, 255)
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(255, 0, 0, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
            color: rgba(255, 0, 0, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(255, 0, 0, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100



