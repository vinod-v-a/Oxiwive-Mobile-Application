MDScreen:
    name:'payment_page'
    BoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            md_bg_color: rgba(246, 250, 255, 255)
            MDIconButton:
                icon: "arrow-left"
                pos_hint: {"center_y": .94}
                ser_font_size: "20sp"
                theme_text_color: "Custom"
                text_color: rgba(34, 34, 34, 255)
                on_release: app.payment_page_backButton()

            MDLabel:
                text: "Payment methods"
                pos_hint: {"center_y": .94, "right": 1.3} # Adjust position as needed
                theme_text_color: "Custom"
                text_color: rgba(34, 34, 34, 255)
                font_size: "20sp"  # Adjust font size as needed

