# client_services.kv
MDScreen:
    name: "client_services1"
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDBoxLayout:
                    orientation: 'vertical'

                    MDTopAppBar:
                        title: "Available Services"
                        font_name: "Roboto"
                        md_bg_color: 1, 0, 0, 1
                        left_action_items: [["menu", lambda x: nav_drawer.set_state()]]
                        right_action_items: [["map-marker", lambda x: app.client_services1()]]

                    MDFloatLayout:
                        MDCard:
                            orientation: 'vertical'
                            size_hint: None, None
                            size: "260dp", "60dp"
                            elevation: 0.5
                            md_bg_color: 1, 1, 1, 1
                            pos_hint:{'center_x': 0.5,'center_y': 0.7}
                            IconRightWidget:
                                icon: "menu-down"
                                pos_hint:{'center_x': 0.9,'center_y': 0.6}
                                on_release: app.show_dropdown_menu(self)
                            MDBoxLayout:
                                pos_hint: {'center_x': 0.55}
                                background_color:(1,1,1,1)
                                MDTextField:
                                    id: pincode
                                    hint_text: "Enter Pincode"
                                    font_name:"Roboto"
                                    helper_text:''
                                    helper_text_mode:  'on_error'
                                    required: True
                                    multiline: False
                                    write_tab: False
                                    size_hint_x: None
                                    width: dp(190)
                        Button:
                            id: login_button
                            text: "Submit"
                            size_hint: .56, .065
                            pos_hint: {"center_x": .5, "center_y": .44}
                            background_color: 0, 0, 0, 0
                            font_name:"Roboto"
                            on_release:
                                app.fetch_pincode()
                            canvas.before:
                                Color:
                                    rgb: rgba(255, 0, 0, 255)
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: [5]

        MDNavigationDrawer:
            id: nav_drawer
            orientation: 'vertical'
            size_hint_x:dp(290)
            size_hint_max_x: "270dp"
            padding: "0dp"
            spacing: "5dp"

            MDCard:
                orientation: 'vertical'
                size_hint: None, None
                size: "268dp", "100dp"
                elevation: 2
                md_bg_color: 1, 1, 1, 1

                BoxLayout:
                    size_hint_y: None
                    height: dp(90)
                    padding: "15dp"

                    BoxLayout:
                        size_hint: None, None
                        size: dp(60), dp(60)
                        canvas:
                            Color:
                                rgb: 1, 1, 1
                            Ellipse:
                                pos: self.pos
                                size: 60, 60
                                source: 'images/doctor.jpg'
                                angle_start: 0
                                angle_end: 360
                    BoxLayout:
                        orientation: 'vertical'
                        padding: "5dp"
                        spacing: "5dp"

                        MDLabel:
                            id: username
                            text: "username"
                            font_name: "MPoppins"
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 0.5,'center_y': 0.2}

                        MDLabel:
                            id: email
                            text: "clientemail@gmail.com"
                            theme_text_color: "Hint"
                            font_name: "MPoppins"
                            font_size:'12sp'
                            pos_hint: {'center_x': 0.5,'center_y': 0.1}

            BoxLayout:
                orientation: 'vertical'
                ScrollView:
                    MDList:
                        id: md_list
                        MDList:
                            OneLineIconListItem:
                                text: "Home"
                                on_release:
                                    root.manager.transition.direction = "right"
                                    root.manager.current = "client_services"
                                IconLeftWidget:
                                    icon: "home"
                                    on_release:
                                        root.manager.transition.direction = "right"
                                        root.manager.current = "client_services"
                            OneLineIconListItem:
                                text: "Profile"
                                on_release:
                                    root.manager.transition.direction = "left"
                                    root.manager.current = "menu_profile"
                                IconLeftWidget:
                                    icon: "account-circle"
                                    on_release:
                                        root.manager.transition.direction = "left"
                                        root.manager.current = "menu_profile"
                            OneLineIconListItem:
                                text: "Notification"
                                on_release:
                                    root.manager.transition.direction = "left"
                                    root.manager.current = "menu_notification"
                                IconLeftWidget:
                                    icon: "bell-outline"
                                    on_release:
                                        root.manager.transition.direction = "left"
                                        root.manager.current = "menu_notification"

                            OneLineIconListItem:
                                text: "Bookings"
                                on_release:
                                    root.manager.transition.direction = "left"
                                    root.manager.current = "menu_bookings"
                                IconLeftWidget:
                                    icon: "book-account-outline"
                                    on_release:
                                        root.manager.transition.direction = "left"
                                        root.manager.current = "menu_bookings"

                            OneLineIconListItem:
                                text: "Reports"
                                on_release:
                                    root.manager.transition.direction = "left"
                                    root.manager.current = "menu_reports"

                                IconLeftWidget:
                                    icon: "file-multiple"
                                    on_release:
                                        root.manager.transition.direction = "left"
                                        root.manager.current = "menu_reports"

                            OneLineIconListItem:
                                text: "Support"
                                on_release:
                                    root.manager.transition.direction = "left"
                                    root.manager.current = "menu_support"
                                IconLeftWidget:
                                    icon: "book-information-variant"
                                    on_release:
                                        root.manager.transition.direction = "left"
                                        root.manager.current = "menu_support"

                            OneLineIconListItem:
                                text: "Logout"
                                on_release:
                                    root.manager.transition.direction = "right"
                                    root.manager.current = "login"
                                IconLeftWidget:
                                    icon: "logout"
                                    on_release: app.logout()

